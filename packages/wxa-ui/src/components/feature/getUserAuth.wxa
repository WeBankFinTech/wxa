<template>
    <view class="getAuth" wx:if="{{isAuthing}}">
        <view class="mask" catchtap="tapMask"></view>
        <view class="container">
            <image class="logo logo-class" src="{{logo}}" class="logo-class" mode="{{logoMode}}"></image>
            <view class="tip">
                {{tip}}
            </view>
            <button 
                class="btn-class"
                open-type="{{category}}" 
                bindgetuserinfo="get" 
                bindgetphonenumber="get"
                bindopensetting="get"
                binderror="error"
                app-parameter="{{appParameter}}"
            >同意</button>
        </view>
        <image class="close" src="data:image/png;base64," bindtap="cancel"></image>
    </view>
</template>
<script>

const app = getApp();
class GetAuth {
    externalClasses = ['btn-class', 'logo-class']

    properties = {
        logoMode: {
            type: String,
            value: 'aspectFit',
        },
        route: {
            type: String,
        },
        isAuthing: {
            type: Boolean,
            value: false,
        },
        tip: {
            type: String,
            value: '小程序申请获取您的授权，用于会员服务',
        },
        logo: {
            type: String,
            value: 'data:image/png;base64,',
        },
        category: {
            type: String,
            value: 'getUserInfo',
        },
        appParameter: {
            type: String,
        },
    }

    data = {
    }

    methods = {
        showAuth() {
            if (this.$isDoingAuth) return;
    
            this.$isDoingAuth = true;
    
            this.setData({isAuthing: true});
        },

        get({detail}) {
            // 允许授权
            let {errMsg} = detail;
            
            if (errMsg === `${this.data.category}:ok`) {
                this.$isDoingAuth = false;
                this.setData({isAuthing: false});
                this.triggerEvent('finish', detail);
            }
        },
    
        cancel() {
            this.$isDoingAuth = false;
            this.setData({isAuthing: false});
            this.triggerEvent('cancel');
        },

        tapMask() {},

        error(e) {
            this.triggerEvent('error', e);
        },
    }
}

Component(new GetAuth);

</script>

<config>

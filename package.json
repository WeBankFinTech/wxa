{
	"name": "wxa",
	"version":"1.0.0",
	"devDependencies": {
		"cz-conventional-changelog": "^2.1.0",
		"husky": "^0.14.3",
		"lerna": "^2.9.0",
		"lint-staged": "^7.1.3"
	},
	"scripts": {
		"publish-beta-sh": "sh ./scripts/build.sh && lerna publish --npm-tag=beta --canary=beta --conventional-commits",
		"publish-beta": "lerna publish --npm-tag=beta --canary=beta",
		"commit": "git-cz"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"sideEffects": false,
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
